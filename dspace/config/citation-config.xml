        <!-- ************************************************************************

                  DEFAULT citation format for Americas Original Documents

                  This citation methodology is based on the Chicago citation style for archival materials.
                  This script was developed for the Our Americas Archive Partnership collection at Rice University's Digital Scholarship Archive.
                  For further explanations, please see http://tinyurl.com/mgt5oj

        ************************************************************************   -->
        <citation name="americas-original">
           <!-- Author --> <!-- format it as americas, remove date of birth and first three authors only -->
	       <field max-n-value="3" max-n-ending="et al">
		     <dc-schema>dc</dc-schema>
	         <dc-element>contributor</dc-element>
	         <dc-qualifier>author</dc-qualifier>
	         <display-format multiple-value-seperator=", " format-it="americas-author">@field@.</display-format>
	       </field>

            <!-- Editor --> <!-- format it as americas, remove date of birth and first three editors only -->
            <field max-n-value="3" max-n-ending="et al" noshow-if-exist="dc.contributor.author">
              <dc-schema>dc</dc-schema>
              <dc-element>contributor</dc-element>
              <dc-qualifier>editor</dc-qualifier>
              <display-format multiple-value-seperator=", " format-it="americas-author">@field@ Ed.</display-format>
            </field>

		    <!-- Title -->
	       <field>
		     <dc-schema>dc</dc-schema>
	         <dc-element>title</dc-element>
	         <dc-qualifier></dc-qualifier>
	         <display-format> &lt;i&gt;@field@&lt;/i&gt;</display-format>
	       </field>

            <!-- SubTitle -->
           <field>
             <dc-schema>dc</dc-schema>
             <dc-element>title</dc-element>
             <dc-qualifier>subtitle</dc-qualifier>
             <display-format>, &lt;i&gt;@field@&lt;/i&gt;</display-format>
           </field>

            <!-- Separator -->
           <field>
             <dc-schema></dc-schema>
             <dc-element></dc-element>
             <dc-qualifier></dc-qualifier>
             <display-format>.</display-format>
           </field>

            <!-- Format -->
           <field>
             <dc-schema>dc</dc-schema>
             <dc-element>format</dc-element>
             <dc-qualifier>medium</dc-qualifier>
             <display-format> @field@.</display-format>
           </field>

            <!-- publisher city -->
           <field>
             <dc-schema>dc</dc-schema>
             <dc-element>pubplace</dc-element>
             <dc-qualifier></dc-qualifier>
             <display-format> @field@</display-format>
           </field>

           <!-- Separator -->
           <field show-if-exist="dc.pubplace;dc.contributor.publisher" op="AND">
             <dc-schema></dc-schema>
             <dc-element></dc-element>
             <dc-qualifier></dc-qualifier>
             <display-format>:</display-format>
           </field>

            <!-- publisher company -->
           <field>
             <dc-schema>dc</dc-schema>
             <dc-element>contributor</dc-element>
             <dc-qualifier>publisher</dc-qualifier>
             <display-format> @field@</display-format>
           </field>

            <!-- Separator -->

           <field show-if-exist="dc.pubplace;dc.contributor.publisher" op="OR">
             <dc-schema></dc-schema>
             <dc-element></dc-element>
             <dc-qualifier></dc-qualifier>
             <display-format>,</display-format>
           </field>

            <!-- issue date -->
           <field>
             <dc-schema>dc</dc-schema>
             <dc-element>date</dc-element>
             <dc-qualifier>issued</dc-qualifier>
             <display-format> @field@.</display-format>
           </field>

            <!-- Source: From -->
           <field>
             <dc-schema></dc-schema>
             <dc-element></dc-element>
             <dc-qualifier></dc-qualifier>
             <display-format> From</display-format>
           </field>

            <!-- Source: Woodson Research Center -->
           <field>
             <dc-schema>dc</dc-schema>
             <dc-element>source</dc-element>
             <dc-qualifier>collection</dc-qualifier>
             <display-format format-it="get-wrc"> @field@,</display-format>
           </field>

            <!-- Source: Rice University -->
           <field>
             <dc-schema></dc-schema>
             <dc-element></dc-element>
             <dc-qualifier></dc-qualifier>
             <display-format> Rice University</display-format>
           </field>

            <!-- Collection: Arcival Collection -->
           <field>
             <dc-schema>dc</dc-schema>
             <dc-element>source</dc-element>
             <dc-qualifier>collection</dc-qualifier>
             <display-format format-it="americas-ms-source">&lt;i&gt;@field@&lt;/i&gt;</display-format>
           </field>

            <!-- URI -->
           <field>
             <dc-schema>dc</dc-schema>
             <dc-element>identifier</dc-element>
             <dc-qualifier>uri</dc-qualifier>
             <display-format> &lt;a href="@field@"&gt;@field@&lt;/a&gt;.</display-format>
           </field>

        </citation>



